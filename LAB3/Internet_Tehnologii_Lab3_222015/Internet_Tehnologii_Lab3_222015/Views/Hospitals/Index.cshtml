@model IEnumerable<Internet_Tehnologii_Lab3_222015.Models.Hospital>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            <img src="@item.ImageUrl" alt="Hospital img"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.HospitalId },new{@class="btn btn-primary"}) |
            @Html.ActionLink("Details", "Details", new { id=item.HospitalId }, new { @class = "btn btn-secondary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.HospitalId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
